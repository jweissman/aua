#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "aua"
require "readline"
loop do
  input = Readline.readline("Aua> ")
  Aua.run(input)
rescue Interrupt
  puts "\nExiting shell..."
  exit 0
rescue StandardError => e
  puts "An error occurred: #{e.message}"
  puts "Please try again."
end
